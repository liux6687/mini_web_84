.header {
  position: relative;
  height: 370rpx;
}
.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 370rpx;
}
.header-content {
  position: absolute;
  width: 100%;
  height: 370rpx;
  z-index: 2;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 54rpx;
}
.header-content .title {
  color: #e26b3d; 
  margin-bottom: 25rpx;
}
.num {
  font-weight: bold;
  font-size: 60rpx;
  color: #ef6f3e;
  padding-bottom: 10rpx;
}
.ellipse {
  width: 120rpx;
  height: 8rpx;
  margin-bottom: 30rpx;
}
.alipay {
  display: flex;
  color: #fff;
}
.alipay .user {
  margin: 0 10rpx;
}
.alipay .icon-box {
  width: 28rpx;
  height: 28rpx;
}
.withdrawals {
   padding-top: 45rpx;
}
.withdrawals .submit {
  height: 54rpx;
  width: 150rpx;
  line-height: 54rpx;
  text-align: center;
  border-radius: 54rpx;
  background: #fff;
}


/* items */

.items {
  padding-left: 30rpx;
  height: 135rpx;
  background: #fff;
}
.NOline {
  border: none!important;
}
.items .items-content {
  height: 135rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 2rpx solid #f5f4f9;
}
.items .left {
  display: flex;
  flex-direction: column;
}
.items .right {
  display: flex;
  flex-direction: column;
  margin-right: 30rpx;
}
.items .left .h1, .items .right .h1 {
  margin-bottom: 18rpx;
  font-size: 22rpx;
}
.items .left .h1 {
  font-weight: bold;
}
.money {
  font-size: 28rpx;
  font-weight: bold;
}
.time {
  color: #afafaf;
}
