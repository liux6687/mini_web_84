.header .top {
  background: #2c2c2c;
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx 40rpx 80rpx;
}
.header .top .time .h1 {
  margin-bottom: 18rpx;
}
.header .top .time .time-info {
  font-size: 30rpx;
}
.header .top .btn-box {
  width: 130rpx;
  height: 44rpx;
  border-radius: 44rpx;
  line-height: 44rpx;
  text-align: center;
  background: #fff;
  color: #f0784b;
}

/* bottom */
.header .bottom {
  padding: 35rpx 27rpx;
  background: #fff;
  display: flex;
  align-items: center;
}
.header .bottom .address-icon {
  width: 66rpx;
  height: 66rpx;
  margin-right: 20rpx;
}
.bottom-right .user {
  display: flex;
}
.bottom-right .user .userName {
  font-weight: bold;
  margin-right: 30rpx;
  margin-bottom: 24rpx;
}


.content {
  padding: 18rpx;
}
.content .relus {
  padding: 26rpx;
  background: #fff;
  border-radius: 10rpx;
  line-height: 50rpx;
  color: #ef6f3e;
  margin-bottom: 18rpx;
}
.content .relus .li {
  display: flex;
  align-items: center;
}
.content .relus .img-box {
  width: 34rpx;
  height: 34rpx;
  margin-right: 20rpx;
}

/* ã€‚logistics */
.logistics {
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 10rpx;
}
.logistics .company,.logistics .odd-num {
  height: 85rpx;
  display: flex;
  flex: 1;
  align-items: center;
  border-top: 2rpx solid #f5f4f9;
}
.logistics .company .h1,.logistics .odd-num .h1 {
  flex:0 0 150rpx;
  text-align: center;
  font-weight: bold;
}
.logistics .company .input-box,.logistics .odd-num .input-box {
  flex: 1;
  padding-left: 15rpx;
}
.logistics .company .icon-box {
  width: 36rpx;
  height: 25rpx;
  margin-right: 20rpx;
}
.logistics .odd-num .icon-box {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
/* upload */
.upload {
  margin-top: 18rpx;
}
.upload-items {
  width: 200rpx;
  height: 200rpx;
  background: #fff;
  float: left;
  margin-right: 18rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.no-upload {
  display: flex;
  height: 200rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.no-upload image {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 30rpx;
}
.no-upload text {
  font-weight: bold;
  color: #b7b7be;
}



 .submit-box {
  padding: 20rpx;
  background: #fff;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}
.submit-box view {
  width: 100%;
  height: 96rpx;
  background: #2c2c2c;
  color: #fff;
  line-height: 96rpx;
  text-align: center;
  font-weight: bold;
  font-size: 30rpx;
  border-radius: 10rpx;
}