page {
   padding-top: 30rpx;
}
.header {
  padding: 30rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.left {
  display: flex;
  align-items: center;
  flex: 1;
}
.left .al-logo {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

/* content */
.content {
  background: #fff;
  margin-bottom: 40rpx;
}
.content .h1 {
  padding: 0 40rpx;
  height: 96rpx;
  line-height: 96rpx;
 }
 .content .input-box {
  padding: 0 40rpx;
  display: flex;
  height: 90rpx;
  align-items: center;
  justify-content: space-between;
  font-weight: bold;
  border-bottom: 2rpx solid #f5f4f9;
 }
 .content .input-box input {
  font-size: 35rpx;
 }
 .content .input-box .close {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
 }
 .content-footer {
  padding: 0 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
 }
 .all-money {
   color: #b3b7c4;
 }
 .all {
   color: #ef6f3e;
   font-weight: bold;
 }


 .submit-box {
  padding: 0 20rpx;
}
.submit-box view {
  width: 100%;
  height: 96rpx;
  background: #2c2c2c;
  color: #fff;
  line-height: 96rpx;
  text-align: center;
  font-weight: bold;
  font-size: 30rpx;
  border-radius: 10rpx;
}