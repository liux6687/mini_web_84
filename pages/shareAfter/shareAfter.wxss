.user {
  height: 185rpx;
  box-sizing: border-box;
  background: #2c2c2c;
  color: #fff;
  display: flex;
  align-items: center;
}
.user .imgBox {
   position: relative;
   margin: 0 30rpx; 
}
.user .imgBox view {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  position: relative;
  overflow: hidden;
}
.user .imgBox view image {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.user .imgBox .Identity {
  width: 50rpx;
  height: 25rpx;
  position: absolute;
  left: 50%;
  margin-left: -25rpx;
  bottom: -13rpx;
}
.user .user-info {
  flex: 1;
}
.user .user-info .name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.user .user-info .id {
  position: relative;
}
.user .user-info .id .num {
  font-size: 18rpx;
  display: inline-block;
  padding: 10rpx 10rpx 10rpx 40rpx;
  background: #161616;
  border-radius: 50rpx;
}
.user .user-info .id image {
  position: absolute;
  left: 0;
  bottom: 4rpx;
  width: 30rpx;
  height: 30rpx;
}
.user .goHome {
  float: right;
  position: relative;
  width:  170rpx;
  height: 55rpx;
}
.user .goHome .bg {
  
}
.user .goHome .goHome-main {
  position: absolute;
  left: 0;
  top: 0;
  width:  170rpx;
  height: 55rpx;
  display: flex;
  align-items: center;
}
.user .goHome .goHome-main image {
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx 0 15rpx;
}
.search {
  margin-top: 15rpx;
  height: 70rpx;
  background: #fff;
  border-radius: 70rpx;
  line-height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search .closeBox {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
}
.search image {
  width: 26rpx;
  height: 26rpx;
}
/* 商品列表 */
.credit-ample .goods-list {
   padding: 24rpx;
}

.credit-ample .goods-list .listItem {
  width: 342rpx; 
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}
.credit-ample .goods-list .listItem:nth-child(odd) {
  float: left;
}
.credit-ample .goods-list .listItem:nth-child(even) {
  float: right
}
.credit-ample .goods-list .listItem .imgBox {
  height: 340rpx;
  line-height: 340rpx;
}
.credit-ample .goods-list .listItem .imgBox image {
  vertical-align: middle;
}
.credit-ample .goods-info {
  background: #fff;
  padding: 8rpx;
  /* border: 2rpx solid; */
}
.credit-ample .goods-info .info-top {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-bottom: 10rpx;
  line-height: 1;
  font-weight: bold;
}
.credit-ample .goods-info .info-bottom {
  display: flex;
  line-height: 1;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 20rpx;
}
.info-bottom-left {
  font-size: 20rpx;
}
.info-bottom-right {
  flex: 1;
  display: flex;
  align-items: center;
}
.info-bottom-right .price {
  font-size: 25rpx;
  font-weight: bold;
}
