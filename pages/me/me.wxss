.me {
}
.me .top {
  padding: 30rpx 50rpx 0rpx 40rpx;
  background: #3a3a3a;
  color: #fff;
  /* height: 390rpx; */
  box-sizing: border-box;
}
/* 用户信息 */
.me .top .user {
  display: flex;
  align-items: center;
}
.me .top .user .userInfo {
  display: flex;
  flex: 1;
  align-items: center;
}
.me .top .portrait {
  flex: 0 0 140rpx;
  height: 140rpx;
  border-radius: 100rpx;
  overflow: hidden;
  margin-right: 25rpx;
  border: 10rpx solid #4d4d4d;
}
.me .top .user .userInfo .userInfo-right {
  flex: 1;
} 
.me .top .user .userInfo .userInfo-right .h1 {
  padding: 10rpx 0 30rpx;
  font-size: 28rpx;
}
.me .top .user .userInfo .userInfo-right .Id-text {
  display: inline-block;
  border-radius: 30rpx;
  font-size: 22rpx;
  padding: 10rpx 10rpx 10rpx 40rpx;
  background: rgba(0,0,0,.2);
	font-family: PingFangSC-Regular;
	color: #ffffff;
}
.me .top .user .userInfo .userInfo-right .Id {
  position: relative;
}
.me .top .user .userInfo .userInfo-right .Id image {
  position: absolute;
  top: 5rpx;
  left: 0rpx;
  width: 30rpx;
  height: 30rpx;
  border-radius: 30rpx;
  overflow: hidden;
}
.me .again-login {
  flex: 0 0 148rpx;
  position: relative;
}
.me .again-login button {
  border: 2rpx solid #9d9d9d;
  box-sizing: border-box;
  padding: 10rpx 16rpx 10rpx 45rpx;
  border-radius: 46rpx;
  font-size: 20rpx;
  color: #fff;
}
.me .again-login image {
  position: absolute;
  top: 14rpx;
  left: 14rpx;
  width: 22rpx;
  height: 22rpx;
}
/* 店铺信息 */
.content {
  position: relative;
  padding-top: 86rpx;
}
.me .shop {
  width: 714rpx;
	height: 140rpx;
  position: absolute;
  top: -70rpx;
  left: 50%;
  margin-left: -357rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
	background-color: #ffffff;
	box-shadow: 0px 1px 16px 0px 
		rgba(0, 0, 0, 0.1);
	border-radius: 20rpx;
  box-sizing: border-box;
  padding: 0 30rpx 0 35rpx;
}
.shopInfo {
  display: flex;
}
.me .shop .shop-logo {
  position: relative;
}
.me .shop .shop-logo image:first-child {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  overflow: hidden;
  margin-right: 25rpx;
}
.me .shop .shop-logo image:last-child {
  position: absolute;
  top: 85rpx;
  left: 26rpx;
  width: 46rpx;
  height: 26rpx;
}
.me .shop .shop-right .h1 {
  padding: 20rpx 0 20rpx;
  font-size: 28rpx;
	font-family: PingFangSC-Regular;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #000000;
}
.me .shop .shop-right .imgList {
  display: flex;
}
.me .shop .shop-right .imgList image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 2rpx;
}
.shop-home {
  width: 170rpx;
	height: 58rpx;
  display: flex;
  align-items: center;
  justify-content: center;
	background-image: linear-gradient(90deg, 
		#f47047 0%, 
		#fa903e 60%, 
		#ffaf34 100%), 
	linear-gradient(
		#fafbfd, 
		#fafbfd);
	background-blend-mode: normal, 
		normal;
	border-radius: 29px;
	font-family: PingFangSC-Regular;
	font-size: 24rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
}
.shop-home image {
  margin-left: 15rpx;
  width: 11rpx;
	height: 17rpx;
}
/* mys */
.mys {
  /* background: #fff; */
  display: flex;
  padding: 32rpx 0 114rpx;
  /* padding-top: 36rpx; */
  justify-content: center;
  height: 80rpx;
}
.myService, .myTransferList, .myGuarantee {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-left: 2rpx solid #e9e9e9;
}
.myService {
  border: none;
}
.mys .num {
  margin-bottom: 15rpx;
	font-family: PingFangSC-Regular;
	font-size: 35rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
}

/* 我的信用分 */ 
.myCredit,.kefu,.mySecurityDeposit,.myWallet {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 0rpx 40rpx;
  margin-bottom: 18rpx;
}
.myCredit .icon,.kefu .icon,.mySecurityDeposit .icon,.myWallet .icon {
  width: 30rpx;
  height: 25rpx;
  margin-right: 25rpx;
}
.myCredit .right,.kefu .right,.mySecurityDeposit .right,.myWallet .right {
  display: flex;
  padding: 40rpx 0rpx;
  flex: 1;
  justify-content: space-between;
}

.mySecurityDeposit {
  margin-bottom: 2rpx;
}
.kefu .move, .myCredit .move,.mySecurityDeposit .move,.myWallet .move {
  width: 10rpx;
  height: 20rpx;
}
.kefu  .right {
  position: relative;
}
.kefu-btn {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 2;
}