.header {
  padding: 0rpx 25rpx 0rpx 50rpx; 
  display: flex;
  margin-bottom: 10rpx;
}
.header-left, .header-right {
  flex: 1;
}
.header-left {
  display: flex;
  align-items: center;
}
.header-left .selected {
  display: flex;
  align-items: center;
}
.header-left .selected:first-child {
  margin-right: 20rpx;
}
.header-left .selected text {
  padding: 30rpx 0;
}
.header-left image {
  width: 16rpx;
  height: 8rpx;
  margin-left: 10rpx;
}
.header-right {
  display: flex;
  flex: 1;
  justify-content: flex-end;
}
.set,.share {
  display: flex;
  padding: 30rpx 0;
  align-items: center;
}
.set {
  margin-right: 35rpx;
}
.set image,.share image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}


/* goodsList */
.goodsList {
  padding: 0 34rpx;
  margin-bottom: 24rpx;
}

.copy {
  font-size: 18rpx;
  position: relative;
  top: -4rpx;
}


.goodsDetails .goodsImg {
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 30rpx;
  float: left;
  line-height: 180rpx;
}
.goodsDetails .goodsImg image {
  vertical-align: middle;
}
.goodsDetails .goodsDetails-right {
  float: left;
  width: 410rpx;
}
.goodsDetails .goodsDetails-right .h1 {
  word-break:break-all;
  line-height: 38rpx;
  margin-bottom: 40rpx;
}

.goodsDetails .goodsDetails-right .right-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goodsDetails .goodsDetails-right .right-bottom .item-info {
  margin-right: 20rpx;
  font-size: 20rpx;
}
.goodsDetails .info {
  margin-bottom: 10rpx;
}
.goodsDetails .info view:first-child{
  flex: 0 0 80rpx;
}
.goodsDetails .item-info .color {
  white-space: nowrap;
  margin-bottom: 5rpx;
}
.cardFooter {
  display: flex;
  margin-top: 40rpx;
  justify-content: flex-end;
}
.cardFooter view {
  padding: 0rpx 20rpx; 
  border: 2rpx solid #6f6f7d;
  height: 55rpx;
  line-height: 55rpx;
  border-radius: 55rpx;
  margin-left: 20rpx;
}
.active {
  border: 2rpx solid #ef6f3e!important;
  color: #ef6f3e;
}

/* 弹出框 */
.myTransferList .model {
  position: fixed;
  top: 86rpx;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,.6)
}

.myTransferList .model-main {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 999;
  padding: 0 30rpx;
}
.myTransferList .model-main .items {
   height: 90rpx;
   display: flex;
   align-items: center;
   justify-content: space-between;
   border-bottom: 2rpx solid #f5f4f9;
}
.myTransferList .model-main .items image {
  width: 28rpx;
  height: 20rpx;
}
.myTransferList .select {
  color: #ef6f3e;
}

.shareModel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,.3);
  
}
.shareModel-main {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-top-right-radius: 40rpx;
  border-top-left-radius: 40rpx;
}
.shareModel-main image {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 18rpx;
}
.shareModel-main .top {
  display: flex;
  justify-content: space-between;
  padding: 100rpx 150rpx 80rpx;
}
.shareModel-main .right, .shareModel-main .left {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.shareModel-main .left button {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.shareModel-main .bottom {
  height: 100rpx;
  box-sizing: border-box;
  border-top: 2rpx solid #f5f4f9;
  font-size: 28rpx;
  text-align: center;
  line-height: 100rpx;
}
/* 没有商品 */
.no-list {
  width: 100%;
  position: fixed;
  top: 40%;
  text-align: center;

}
.no-list .img-box {
  position: absolute;
  top: 0;
  left: 50%;
  width: 167rpx;
  transform: translateX(-84rpx);
  height: 164rpx;
}
.no-list .text {
  margin-top: 210rpx;
  color: #ccced8;
}

.share_img_box {
  background-color: rgba(0, 0, 0, 0.4);
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
.share_img_box .img_box {
  height: 90%;
  margin-bottom: 20rpx;
}
.share_img_box image {
  display: block;
  height: 1000px;
}
.share_img_box .btn-box {
  display: flex;
  justify-content: center;
}
.share_img_box .btn-box view {
  background: #fff;
  flex: 0 0 160rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 40rpx;
  border-radius: 15rpx;
}
.share_img_box .btn-box view.down {
  background: lightseagreen;
}
