page {
  padding-top: 40rpx;
}
.content {
  background: #fff;
  padding-left: 30rpx;
  margin-bottom: 40rpx;
}
.items {
  height: 100rpx;
  display: flex;
  align-items: center;
  border-top: 2rpx solid #f5f4f9;
}
.NOline {
  border: none!important;
}
.items .h1 {
  flex: 0 0 230rpx;
}
.items .input-box {
  flex: 1;
}
.items .btn-box {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  margin-right: 30rpx;
}
.close {
  width: 36rpx;
  height: 36rpx; 
  vertical-align: middle;
}
.get-code {
  color: #ef6f3e;
}

.submit-box {
  padding: 0 20rpx;
}
.submit-box view {
  width: 100%;
  height: 96rpx;
  background: #2c2c2c;
  color: #fff;
  line-height: 96rpx;
  text-align: center;
  font-weight: bold;
  font-size: 30rpx;
  border-radius: 10rpx;
}