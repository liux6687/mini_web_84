.dl .dt {
  height:  84rpx;
  line-height: 84rpx;
  padding-left: 30rpx;
  color: #6f6f7d;
}
.dl .dd {
  height: 100rpx;
  background: #fff;
  line-height: 100rpx;
  padding-left: 30rpx;
}
.dl .dd .main {
  display: flex;
  justify-content: space-between;
}
.dl .dd .main .right image{
  width: 10rpx;
  height: 20rpx;
  margin: 0 30rpx 0 15rpx; 
}
.dl .dd .main .h1 {
  font-weight: bold;
}
.dl .dd .main .right .text {
  color: #6f6f7d;
}
.line {
  border-top: 2rpx solid #f5f4f9;
}
.footer {
  padding: 30rpx;
  color: #6f6f7d;
  font-size: 20rpx;
}

.submit-box {
  padding: 20rpx;
  background: #fff;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}
.submit-box view {
  width: 100%;
  height: 96rpx;
  background: #2c2c2c;
  color: #fff;
  line-height: 96rpx;
  text-align: center;
  font-weight: bold;
  font-size: 30rpx;
  border-radius: 10rpx;
}

/* 模态弹出框内容 */
.input-box {
  border: 2rpx solid #c7cbd9;
  box-sizing: border-box;
  height: 70rpx;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}
.input-box .text {
  font-size: 30rpx;
  margin: 0 30rpx;
}
.modelInput {
  height: 80rpx;
  border: 2rpx solid #f5f4f9;
}

.model .list .list-item {
  display: flex;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
}
.model .list .list-item .dot {
  width: 32rpx;
  height: 32rpx;
  border-radius: 32rpx;
  margin-right: 25rpx;
}
