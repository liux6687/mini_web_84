.header {
  background: #fff;
  height: 90rpx;
  display: flex;
  margin-bottom: 24rpx;
  align-items: center;
}
.header image {
  width: 26rpx;
  height: 26rpx;
  margin: 0 30rpx;
}
.header .search {
  /* background: #f2f2f2; */
  line-height: 70rpx;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.header .search input {
  width: 100%;
}
.header .submit {
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 30rpx;
}

.content {
  padding:  20rpx 50rpx; 
  background: #fff;
}
.content .top {
  height: 85rpx;
  display: flex;
  color: #989dae;
  justify-content: space-between;
  align-items: center;
}
.content .top image {
  width: 30rpx;
  height: 30rpx;
}
.li {
  padding: 26rpx;
  background: #f5f4f9;
  float: left;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
}